<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_lesson_three"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="eldad.corem.exercises.lessonThree">

    <TextView
        android:layout_width="82dp"
        android:layout_height="61dp"
        android:background="@color/violet"
        android:theme="?attr/actionBarStyle"
        android:minHeight="?attr/actionBarSize"
        android:id="@+id/textViewViolet"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp"
        android:text="@string/violet"
        android:textColor="@android:color/black" />

    <TextView
        android:layout_width="15dp"
        android:layout_height="61dp"
        android:background="@color/indigo"
        android:theme="?attr/actionBarTheme"
        android:minHeight="?attr/actionBarSize"
        android:id="@+id/textViewIndigo"
        app:layout_constraintLeft_toRightOf="@+id/textViewViolet"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp"/>

    <TextView
        android:layout_width="4dp"
        android:layout_height="61dp"
        android:background="@color/yellow"
        android:theme="?attr/actionBarTheme"
        android:minHeight="?attr/actionBarSize"
        android:id="@+id/textViewYellow"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/textViewIndigo"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp"
        android:text="@string/yellow"/>

    <TextView
        android:layout_width="4dp"
        android:layout_height="61dp"
        android:background="@color/orange"
        android:theme="?attr/actionBarTheme"
        android:minHeight="?attr/actionBarSize"
        android:id="@+id/textViewOrange"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp"
        app:layout_constraintLeft_toRightOf="@+id/textViewYellow" />

    <TextView
        android:layout_width="1dp"
        android:layout_height="61dp"
        android:background="@color/red"
        android:theme="?attr/actionBarTheme"
        android:minHeight="?attr/actionBarSize"
        android:id="@+id/textViewRed"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp"
        app:layout_constraintLeft_toRightOf="@+id/textViewOrange" />

    <TextView
        android:layout_width="1dp"
        android:layout_height="61dp"
        android:background="@color/blue"
        android:theme="?attr/actionBarTheme"
        android:minHeight="?attr/actionBarSize"
        android:id="@+id/textViewBlue"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp"
        app:layout_constraintLeft_toRightOf="@+id/textViewRed" />

    <TextView
        android:layout_width="1dp"
        android:layout_height="61dp"
        android:background="@color/green"
        android:theme="?attr/actionBarTheme"
        android:minHeight="?attr/actionBarSize"
        android:id="@+id/textViewGreen"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp"
        app:layout_constraintLeft_toRightOf="@+id/textViewBlue" />

</android.support.constraint.ConstraintLayout>
