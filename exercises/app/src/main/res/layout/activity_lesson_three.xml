<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_lesson_three"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="eldad.corem.exercises.lessonThree">

    <android.support.v7.widget.Toolbar
        android:layout_width="82dp"
        android:layout_height="61dp"
        android:background="@color/violet"
        android:theme="?attr/actionBarStyle"
        android:minHeight="?attr/actionBarSize"
        android:id="@+id/toolbarViolet"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp"
        app:subtitle="Violet"
        app:subtitleTextColor="@android:color/black" />

    <android.support.v7.widget.Toolbar
        android:layout_width="15dp"
        android:layout_height="61dp"
        android:background="@color/indigo"
        android:theme="?attr/actionBarTheme"
        android:minHeight="?attr/actionBarSize"
        android:id="@+id/toolbarIndigo"
        app:layout_constraintLeft_toRightOf="@+id/toolbarViolet"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp"
        android:text="indigo"/>

    <android.support.v7.widget.Toolbar
        android:layout_width="4dp"
        android:layout_height="61dp"
        android:background="@color/yellow"
        android:theme="?attr/actionBarTheme"
        android:minHeight="?attr/actionBarSize"
        android:id="@+id/toolbarYellow"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/toolbarIndigo"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp"
        android:text="yellow"/>

    <android.support.v7.widget.Toolbar
        android:layout_width="4dp"
        android:layout_height="61dp"
        android:background="@color/orange"
        android:theme="?attr/actionBarTheme"
        android:minHeight="?attr/actionBarSize"
        android:id="@+id/toolbarOrange"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp"
        app:layout_constraintLeft_toRightOf="@+id/toolbarYellow" />

    <android.support.v7.widget.Toolbar
        android:layout_width="1dp"
        android:layout_height="61dp"
        android:background="@color/red"
        android:theme="?attr/actionBarTheme"
        android:minHeight="?attr/actionBarSize"
        android:id="@+id/toolbarRed"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp"
        app:layout_constraintLeft_toRightOf="@+id/toolbarOrange" />

    <android.support.v7.widget.Toolbar
        android:layout_width="1dp"
        android:layout_height="61dp"
        android:background="@color/blue"
        android:theme="?attr/actionBarTheme"
        android:minHeight="?attr/actionBarSize"
        android:id="@+id/toolbarBlue"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp"
        app:layout_constraintLeft_toRightOf="@+id/toolbarRed" />

    <android.support.v7.widget.Toolbar
        android:layout_width="1dp"
        android:layout_height="61dp"
        android:background="@color/green"
        android:theme="?attr/actionBarTheme"
        android:minHeight="?attr/actionBarSize"
        android:id="@+id/toolbarGreen"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp"
        app:layout_constraintLeft_toRightOf="@+id/toolbarBlue" />

</android.support.constraint.ConstraintLayout>
