<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_lesson_three_c"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="eldad.corem.exercises.lessonThreeC">

    <android.support.v7.widget.Toolbar
        android:layout_width="81dp"
        android:layout_height="wrap_content"
        android:background="@color/violet"
        android:theme="?attr/actionBarStyle"
        android:id="@+id/toolbarViolet"
        app:subtitle="Violet"
        app:subtitleTextColor="@android:color/black"
        app:layout_constraintRight_toLeftOf="@+id/toolbarIndigo"
        app:layout_constraintTop_toBottomOf="@+id/toolbarIndigo" />

    <android.support.v7.widget.Toolbar
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:background="@color/indigo"
        android:theme="?attr/actionBarTheme"
        android:id="@+id/toolbarIndigo"
        app:subtitle="Indigo"
        app:layout_constraintRight_toLeftOf="@+id/toolbarBlue"
        app:layout_constraintTop_toBottomOf="@+id/toolbarBlue" />

    <android.support.v7.widget.Toolbar
        android:layout_width="74dp"
        android:layout_height="wrap_content"
        android:background="@color/yellow"
        android:theme="?attr/actionBarTheme"
        android:id="@+id/toolbarYellow"
        android:text="yellow"
        app:subtitle="Yellow"
        app:subtitleTextColor="@android:color/black"
        app:layout_constraintLeft_toRightOf="@+id/toolbarOrange"
        app:layout_constraintTop_toBottomOf="@+id/toolbarOrange" />

    <android.support.v7.widget.Toolbar
        android:layout_width="81dp"
        android:layout_height="wrap_content"
        android:background="@color/orange"
        android:theme="?attr/actionBarTheme"
        android:id="@+id/toolbarOrange"
        app:subtitle="Orange"
        app:subtitleTextColor="@android:color/black"
        app:layout_constraintTop_toBottomOf="@+id/toolbarRed"
        app:layout_constraintLeft_toRightOf="@+id/toolbarRed" />

    <android.support.v7.widget.Toolbar
        android:layout_width="59dp"
        android:layout_height="wrap_content"
        android:background="@color/red"
        android:theme="?attr/actionBarTheme"
        android:id="@+id/toolbarRed"
        app:subtitle="Red"
        app:subtitleTextColor="@android:color/black"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp"
        app:layout_constraintHorizontal_bias="0.14"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp"
        app:layout_constraintVertical_bias="0.12" />

    <android.support.v7.widget.Toolbar
        android:layout_width="59dp"
        android:layout_height="wrap_content"
        android:background="@color/blue"
        android:theme="?attr/actionBarTheme"
        android:id="@+id/toolbarBlue"
        app:subtitle="Blue"
        app:layout_constraintTop_toBottomOf="@+id/toolbarGreen"
        app:layout_constraintRight_toLeftOf="@+id/toolbarGreen" />

    <android.support.v7.widget.Toolbar
        android:layout_width="71dp"
        android:layout_height="wrap_content"
        android:background="@color/green"
        android:theme="?attr/actionBarTheme"
        android:id="@+id/toolbarGreen"
        android:title="Green"
        app:subtitle="Green"
        app:subtitleTextColor="@android:color/black"
        app:layout_constraintLeft_toRightOf="@+id/toolbarYellow"
        app:layout_constraintTop_toBottomOf="@+id/toolbarYellow" />

</android.support.constraint.ConstraintLayout>
