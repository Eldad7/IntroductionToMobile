<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_lesson_six"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="eldad.corem.exercises.lessonSix">

    <eldad.corem.exercises.lessonSixViewB
        android:id="@+id/customView"
        android:layout_width="206dp"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintRight_creator="1"
        android:layout_height="113dp"
        app:layout_constraintTop_toTopOf="parent"
        android:scaleX="2"
        android:scaleY="2"
        android:layout_marginLeft="150dp" />

    <Button
        android:text="@string/scene_6a"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Scene1Button"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/customView"
        app:layout_constraintVertical_bias="0.88"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp"
        app:layout_constraintHorizontal_bias="0.17"
        android:onClick="onGoToScene6A"/>

    <Button
        android:text="@string/scene_6b"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Scene2Button"
        android:layout_marginStart="8dp"
        app:layout_constraintLeft_toRightOf="@+id/Scene1Button"
        android:layout_marginLeft="8dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/customView"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp"
        android:background="@color/blue"
        tools:textColor="@android:color/background_light"
        app:layout_constraintHorizontal_bias="0.83"
        app:layout_constraintVertical_bias="0.88"
        android:onClick="onGoToScene6B"/>

</android.support.constraint.ConstraintLayout>
